{
  "comments": {
    "lineComment": "",
    "blockComment": [ "", "" ]
  },

  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ]
  ],

  "autoClosingPairs": [
    {
      "open": "\"",
      "close": "\""
    },
    {
      "open": "'",
      "close": "'"
    },
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    }
  ],

  "surroundingPairs": [
    [ "\"", "\"" ],
    [ "'", "'" ],
    [ "{", "}" ],
    [ "[", "]" ]
  ],

  "folding": {
    "markers": {
      // matches array headers like:  Items[3]: 
      "start": "^\\s*[A-Za-z_][A-Za-z0-9_.]*\\s*\\[\\s*\\d+\\s*\\]\\s*:\\s*$|^\\s*-\\s+",
      // stop folding on blank line or decrease in indentation (VS handles indentation-based folding with markers)
      "end": "^\\s*$"
    }
  },

  "indentationRules": {
    "increaseIndentPattern": "^\\s*(?:[A-Za-z_][A-Za-z0-9_.]*\\s*\\[\\s*\\d+\\s*\\]\\s*:\\s*$|-)\\s*$",
    "decreaseIndentPattern": "^\\s*$"
  }
}
